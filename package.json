{
  "name": "blocblc1",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --watchAll=false --passWithNoTests --testPathIgnorePatterns=\"tests/api.test.js\" --testPathIgnorePatterns=\"tests/vehicles.test.js\"",
    "test:vehicles": "jest client/src/components/VehicleManager.test.jsx --coverage --watchAll=false",
    "test:api": "jest tests/ --testEnvironment=node --watchAll=false",
    "test:watch": "jest --watch",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "lint": "eslint client/src/components/VehicleManager.jsx client/src/hooks/useVehicles.js --fix",
    "lint:check": "eslint client/src/components/VehicleManager.jsx client/src/hooks/useVehicles.js",
    "format": "prettier --write client/src/components/VehicleManager.jsx client/src/components/VehicleManager.css client/src/hooks/useVehicles.js",
    "format:check": "prettier --check client/src/components/VehicleManager.jsx client/src/components/VehicleManager.css client/src/hooks/useVehicles.js",
    "build": "echo 'Build process - Frontend should be built separately'",
    "test:regression": "node scripts/test-vehicle-features.js",
    "test:all": "npm run test && npm run test:e2e && npm run test:regression",
    "quality:check": "npm run lint:check && npm run format:check && npm run test"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "client/src/**/*.{js,jsx}",
      "!client/src/**/*.test.{js,jsx}",
      "!client/dist/**",
      "!node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.{js,jsx}",
      "**/src/**/*.test.{js,jsx}"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^.+\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.10.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@cypress/code-coverage": "^3.14.6",
    "@eslint/js": "^9.34.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "cypress": "^15.1.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
